{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "business": [
        "components/index.ts"
      ],
      "template": [
        "template/index.ts"
      ],
      "business/es/*": [
        "components/*"
      ]
    },
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "skipLibCheck": true,
    "allowJs": true,
    "importsNotUsedAsValues": "preserve"
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.tsx",
    "template/**/*.tsx",
    "template/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "**/__tests__/**/*"
  ]
}
